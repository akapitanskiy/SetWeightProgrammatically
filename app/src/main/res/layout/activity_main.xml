<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnApply" >
    </Button>

    <LinearLayout
        android:id="@+id/linLayAsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">
        <FrameLayout
            android:id="@+id/piece1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/corner_left"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/piece2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@color/colorPiece2"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/piece3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/corner_right"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>